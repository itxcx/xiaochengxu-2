/* shadow Start */
.shadow{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 0;
  left: 0;
  padding: 20rpx;
}
.foot-menu{
  position: absolute;
  bottom: 100rpx;
  left: 20rpx;
  background: #F8F8F8;
  width: 710rpx;
  border-radius: 10rpx;
}
