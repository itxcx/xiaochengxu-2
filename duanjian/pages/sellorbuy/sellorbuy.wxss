.swiper-tab {
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  display: inline-block;
  color: #666;
  text-align: center;
}

.on {
  border-bottom: #3498db 4rpx solid;
  color: #000;
}

.bg {
  width: 100%;
  height: 30rpx;
  background-color: #f4f4f4;
}

.swiper-box {
  height: 1900rpx;
}

.item {
  padding: 10rpx 20rpx 10rpx 16rpx;
  border-bottom: 2rpx solid #c8c7cc;
  width: 100%;
  height: 82rpx;
}

.title {
  font-size: 28rpx;
  color: #f00;
  margin-left: 10rpx;
}

.checkgroup {
  padding: 12rpx 0;
  margin-left: 40rpx;
  display: inline-block;
}

checkbox {
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
  text-align: center;
  margin-right: 38rpx;
}

.input {
  font-size: 30rpx;
  padding: 20rpx 30rpx;
  width: 75%;
  display: inline-table;
  position: relative;
  top: -5rpx;
}

.pic {
  padding: 10rpx 20rpx 10rpx 16rpx;
  border-bottom: 2rpx solid #c8c7cc;
  width: 100%;
}

.pic .pictil {
  font-size: 28rpx;
  color: #f00;
  margin-left: 10rpx;
}

.pic .pic-r {
  display: inline-table;
  width: 74%;
  margin: 20rpx 0 0 80rpx;
  padding-top: 20rpx;
}

.pic .pic-r image {
  width: 196rpx;
  height: 196rpx;
  margin: 20rpx 50rpx 0 0;
  border: 2rpx solid #c8c7cc;
}

.file {
  position: relative;
  padding: 10rpx 20rpx 10rpx 16rpx;
  border-bottom: 2rpx solid #c8c7cc;
  width: 100%;
  height: 160rpx;
}

.file-r {
  display: inline-table;
  padding: 12rpx 0;
  font-size: 32rpx;
  width: 76%;
}

.file-list {
  padding: 45rpx 30rpx 5rpx 30rpx;
  width: 100%;
}

.bottom {
  position: relative;
  margin-top: 40rpx;
  padding: 20rpx 30rpx 40rpx 30rpx;
}

.bottom button {
  font-size: 32rpx;
  width: 690rpx;
  height: 72rpx;
  border-radius: 8rpx;
  color: #fff;
  background-color: #3498db;
  border: 1px solid #3498db;
  padding: 12rpx 24rpx;
  line-height: 1.42857143;
}

.bottom .button-hover {
  background-color: #3498db;
  color: #fff;
}
